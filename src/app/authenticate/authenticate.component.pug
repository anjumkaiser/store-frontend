div
    mat-card
        mat-card-header
            mat-card-title Authenticate using
        mat-card-content
        mat-card-footer
            a(mat-raised-button, routerLink='/autheticate/google') Google
            a(mat-raised-button, routerLink='/autheticate/facebook') Facebook
            a(mat-raised-button, routerLink='/autheticate/twitter') Twitter
    mat-card
        mat-card-header
            mat-card-title Local Login
        mat-card-content
            form([formGroup]="formGroupLogin")
                div
                    mat-form-field
                        mat-label Username
                        input(type="text", matInput, mat-form-field-control, required, formControlName="username", #username)
                        mat-hint Min {{minusernamelength}} characters
                        mat-hint(align="end") {{+username.value?.length}}
                div
                    mat-form-field
                        mat-label Password
                        input([type]="password_hidden ? 'password' : 'text'", matInput, mat-form-field, required, formControlName="password", #password)
                        i(matSuffix, class="fa {{password_hidden ? 'fa-eye' : 'fa-eye-slash'}}", (click)="toggle_password_visibility()")
                        mat-hint Min {{minpasswordlength}} characters
                        mat-hint(align="end") {{+password.value?.length}}
        mat-card-actions
            button(type="submit", mat-button, "[disabled]"="!formGroupLogin.valid", color="primary", (click)="onSubmit()") Login
            button(type="cancel", mat-button, (click)="onCancel()") Clear
